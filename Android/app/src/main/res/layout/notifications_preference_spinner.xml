<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <CheckBox android:id="@+id/cbDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device"
        android:layout_margin="10dp"/>
    <CheckBox android:id="@+id/cbSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbDevice"
        android:layout_margin="10dp"
        android:text="SMS"/>
    <CheckBox android:id="@+id/cbEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/cbSMS"
        android:text="Email"/>
    <CheckBox android:id="@+id/cbNone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbEmail"
        android:layout_margin="10dp"
        android:text="No weekend notifications"/>
</RelativeLayout>